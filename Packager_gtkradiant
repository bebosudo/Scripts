#! /bin/bash
#
#

TITOLO1="Source Packager for GtkRadiant' RPM"

zenity --question --title="$TITOLO1" --text="$TITOLO1. La connessione Ã¨ up? Continuare?"
if [[ $? == 0 ]]; then
	VERSIONNO=`zenity --entry --title="$TITOLO1" --text="Inserire il numero di versione."`
	git clone https://github.com/TTimo/GtkRadiant ./gtkradiant
	cd gtkradiant/
	rm -rf .git/ .gitignore
	scons target=setup
	cd ..
	tar czvf GtkRadiant-$VERSIONNO.tar.gz gtkradiant/
else
	exit 0
fi
